{% macro hostgroup(name, alias, notes, members=[]) -%}
define hostgroup{
    hostgroup_name   {{ name }}
    alias            {{ alias }}
    notes            {{ notes }}
{% if (members | count) > 0 %}
    members          {{ ','.join(members) }}
{% endif %}
}
{%- endmacro %}

