Listen 127.0.0.1:5000
Listen 127.0.0.1:35357
Listen {{ ip.mgmt }}:5000
Listen {{ ip.mgmt }}:35357

<VirtualHost *:5000>
    WSGIDaemonProcess keystone-public processes={{ keystone_processes }} threads=1 user=keystone display-name=%{GROUP}
    WSGIProcessGroup keystone-public
    WSGIScriptAlias / /var/www/cgi-bin/keystone/main
    WSGIApplicationGroup %{GLOBAL}
    WSGIPassAuthorization On
    <IfVersion >= 2.4>
      ErrorLogFormat "%{cu}t %M"
    </IfVersion>
{% if keystone_ssl %}
    SSLEngine on
    SSLCertificateKeyFile {{ SSLCertificateKeyFile }}
    SSLCertificateFile {{ SSLCertificateFile }}
{% endif %}
    LogLevel info
    ErrorLog /var/log/apache2/keystone-error.log
    CustomLog /var/log/apache2/keystone-access.log combined
</VirtualHost>

<VirtualHost *:35357>
    WSGIDaemonProcess keystone-admin processes={{ keystone_processes }} threads=1 user=keystone display-name=%{GROUP}
    WSGIProcessGroup keystone-admin
    WSGIScriptAlias / /var/www/cgi-bin/keystone/admin
    WSGIApplicationGroup %{GLOBAL}
    WSGIPassAuthorization On
    <IfVersion >= 2.4>
      ErrorLogFormat "%{cu}t %M"
    </IfVersion>
{% if keystone_ssl %}
    SSLEngine on
    SSLCertificateKeyFile {{ SSLCertificateKeyFile }}
    SSLCertificateFile {{ SSLCertificateFile }}
{% endif %}
    LogLevel info
    ErrorLog /var/log/apache2/keystone-error.log
    CustomLog /var/log/apache2/keystone-access.log combined
</VirtualHost>